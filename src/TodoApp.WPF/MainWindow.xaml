<Window
    x:Class="TodoApp.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoApp.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="1000"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Панель инструментов  -->
        <ToolBar Grid.Row="0" Background="#F0F0F0">
            <Button
                Padding="10,5"
                Command="{Binding AddTaskCommand}"
                ToolTip="Добавить новую задачу">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0" Text="➕" />
                    <TextBlock Text="Добавить задачу" />
                </StackPanel>
            </Button>

            <Separator />

            <Button
                Padding="10,5"
                Command="{Binding EditTaskCommand}"
                ToolTip="Редактировать выбранную задачу">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0" Text="✏️" />
                    <TextBlock Text="Изменить" />
                </StackPanel>
            </Button>

            <Button
                Padding="10,5"
                Command="{Binding DeleteTaskCommand}"
                ToolTip="Удалить выбранную задачу">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0" Text="🗑️" />
                    <TextBlock Text="Удалить" />
                </StackPanel>
            </Button>

            <Separator />

            <Button
                Padding="10,5"
                Command="{Binding ToggleTaskCompletionCommand}"
                ToolTip="Отметить как выполненную/не выполненную">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0" Text="✅" />
                    <TextBlock Text="Переключить статус" />
                </StackPanel>
            </Button>

            <Separator />

            <Button
                Padding="10,5"
                Command="{Binding ManageCategoriesCommand}"
                ToolTip="Управление категориями">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0" Text="📁" />
                    <TextBlock Text="Категории" />
                </StackPanel>
            </Button>

            <Separator />

            <Button
                Padding="10,5"
                Command="{Binding RefreshCommand}"
                ToolTip="Обновить список">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0" Text="🔄" />
                    <TextBlock Text="Обновить" />
                </StackPanel>
            </Button>
        </ToolBar>

        <!--  Основное содержимое  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Панель фильтров  -->
            <Border
                Grid.Column="0"
                Padding="10"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="0,0,1,0">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Фильтры" />

                    <!--  Поиск  -->
                    <TextBlock Margin="0,0,0,5" Text="Поиск:" />
                    <TextBox
                        Margin="0,0,0,10"
                        Padding="5"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                    <!--  Показывать выполненные  -->
                    <CheckBox
                        Margin="0,0,0,10"
                        Content="Показывать выполненные"
                        IsChecked="{Binding ShowCompleted}" />

                    <!--  Категории  -->
                    <TextBlock Margin="0,0,0,5" Text="Категории:" />
                    <ComboBox
                        Margin="0,0,0,10"
                        IsEditable="True"
                        ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}"
                        Text="Все категории">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="12"
                                        Height="12"
                                        Margin="0,0,5,0">
                                        <Rectangle.Fill>
                                            <SolidColorBrush Color="{Binding Color}" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!--  Приоритет  -->
                    <TextBlock Margin="0,0,0,5" Text="Приоритет:" />
                    <ComboBox
                        Margin="0,0,0,15"
                        IsEditable="True"
                        ItemsSource="{Binding AvailablePriorities}"
                        SelectedItem="{Binding SelectedPriority}"
                        Text="Все приоритеты">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource PriorityToStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!--  Кнопка сброса фильтров  -->
                    <Button
                        Padding="8,4"
                        HorizontalAlignment="Stretch"
                        Command="{Binding ClearFiltersCommand}"
                        Content="Сбросить фильтры" />
                </StackPanel>
            </Border>

            <!--  Список задач  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ListView
                    ItemsSource="{Binding Tasks}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding SelectedTask}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="10"
                                BorderBrush="LightGray"
                                BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Чекбокс выполнения  -->
                                    <CheckBox
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsCompleted}" />

                                    <!--  Информация о задаче  -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontWeight="Bold"
                                            Text="{Binding Title}"
                                            TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                            <Setter Property="Foreground" Value="Gray" />
                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontSize="12"
                                            Foreground="Gray"
                                            Text="{Binding Description}"
                                            TextWrapping="Wrap" />

                                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                FontSize="10"
                                                Text="📅" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="DarkBlue"
                                                Text="{Binding DueDate, StringFormat='dd.MM.yyyy'}" />

                                            <TextBlock Margin="5,0" Text=" | " />

                                            <TextBlock
                                                FontSize="12"
                                                Foreground="DarkRed"
                                                Text="{Binding Priority, Converter={StaticResource PriorityToStringConverter}}" />

                                            <TextBlock
                                                Margin="5,0"
                                                Text=" | "
                                                Visibility="{Binding Category, Converter={StaticResource NullToVisibilityConverter}}" />

                                            <Border
                                                Padding="4,2"
                                                Background="{Binding Category.Color, Converter={StaticResource StringToBrushConverter}}"
                                                CornerRadius="3"
                                                Visibility="{Binding Category, Converter={StaticResource NullToVisibilityConverter}}">
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="White"
                                                    Text="{Binding Category.Name}" />
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Действия  -->
                                    <StackPanel
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Button
                                            Command="{Binding EditTaskCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            Style="{StaticResource IconButtonStyle}"
                                            ToolTip="Редактировать">
                                            <TextBlock Text="✏️" />
                                        </Button>
                                        <Button
                                            Margin="5,0,0,0"
                                            Command="{Binding DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            Style="{StaticResource IconButtonStyle}"
                                            ToolTip="Удалить">
                                            <TextBlock Text="🗑️" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--  Статистика  -->
                <Border
                    Grid.Row="1"
                    Padding="10"
                    Background="#F5F5F5"
                    BorderBrush="LightGray"
                    BorderThickness="0,1,0,0">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock FontWeight="Bold" Text="📊 Статистика: " />
                        <TextBlock Margin="10,0" Text="{Binding TotalTasks, StringFormat='Всего: {0}'}" />
                        <TextBlock
                            Margin="10,0"
                            Foreground="Green"
                            Text="{Binding CompletedTasks, StringFormat='Выполнено: {0}'}" />
                        <TextBlock
                            Margin="10,0"
                            Foreground="Blue"
                            Text="{Binding PendingTasks, StringFormat='Активных: {0}'}" />
                        <TextBlock
                            Margin="10,0"
                            Foreground="Red"
                            Text="{Binding OverdueTasks, StringFormat='Просрочено: {0}'}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!--  Статус бар  -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock FontStyle="Italic" Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar
                    Width="100"
                    Height="16"
                    IsIndeterminate="{Binding IsBusy}"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
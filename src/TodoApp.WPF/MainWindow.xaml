<Window x:Class="TodoApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp.WPF"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <ToolBar Grid.Row="0" Background="#F0F0F0">
            <Button Command="{Binding AddTaskCommand}" 
                    ToolTip="Добавить новую задачу"
                    Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" Margin="0,0,5,0"/>
                    <TextBlock Text="Добавить задачу"/>
                </StackPanel>
            </Button>

            <Separator/>

            <Button Command="{Binding EditTaskCommand}" 
                    ToolTip="Редактировать выбранную задачу"
                    IsEnabled="{Binding SelectedTask, Converter={StaticResource NullToBoolConverter}}"
                    Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✏️" Margin="0,0,5,0"/>
                    <TextBlock Text="Изменить"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding DeleteTaskCommand}" 
                    ToolTip="Удалить выбранную задачу"
                    IsEnabled="{Binding SelectedTask, Converter={StaticResource NullToBoolConverter}}"
                    Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗑️" Margin="0,0,5,0"/>
                    <TextBlock Text="Удалить"/>
                </StackPanel>
            </Button>

            <Separator/>

            <Button Command="{Binding ToggleTaskCompletionCommand}" 
                    ToolTip="Отметить как выполненную/не выполненную"
                    IsEnabled="{Binding SelectedTask, Converter={StaticResource NullToBoolConverter}}"
                    Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✅" Margin="0,0,5,0"/>
                    <TextBlock Text="Переключить статус"/>
                </StackPanel>
            </Button>

            <Separator/>

            <Button Command="{Binding ManageCategoriesCommand}" 
                    ToolTip="Управление категориями"
                    Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📁" Margin="0,0,5,0"/>
                    <TextBlock Text="Категории"/>
                </StackPanel>
            </Button>

            <Separator/>

            <Button Command="{Binding RefreshCommand}" 
                    ToolTip="Обновить список"
                    Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" Margin="0,0,5,0"/>
                    <TextBlock Text="Обновить"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель фильтров -->
            <Border Grid.Column="0" 
                    BorderBrush="LightGray" 
                    BorderThickness="0,0,1,0"
                    Background="White"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="Фильтры" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <!-- Поиск -->
                    <TextBlock Text="Поиск:" 
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5"
                             Margin="0,0,0,10"/>

                    <!-- Показывать выполненные -->
                    <CheckBox IsChecked="{Binding ShowCompleted}"
                              Content="Показывать выполненные"
                              Margin="0,0,0,10"/>

                    <!-- Категории -->
                    <TextBlock Text="Категории:" 
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name"
                              IsEditable="True"
                              Text="Все категории"
                              Margin="0,0,0,10">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="12" 
                                               Height="12" 
                                               Margin="0,0,5,0">
                                        <Rectangle.Fill>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Приоритет -->
                    <TextBlock Text="Приоритет:" 
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailablePriorities}"
                              SelectedItem="{Binding SelectedPriority}"
                              IsEditable="True"
                              Text="Все приоритеты"
                              Margin="0,0,0,15">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource PriorityToStringConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Кнопка сброса фильтров -->
                    <Button Command="{Binding ClearFiltersCommand}"
                            Content="Сбросить фильтры"
                            Padding="8,4"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <!-- Список задач -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView ItemsSource="{Binding Tasks}" 
                          SelectedItem="{Binding SelectedTask}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" 
                                    BorderThickness="0,0,0,1"
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Чекбокс выполнения -->
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsCompleted}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>

                                    <!-- Информация о задаче -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontWeight="Bold"
                                                   TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                            <Setter Property="Foreground" Value="Gray"/>
                                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="{Binding Description}" 
                                                   Foreground="Gray"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,0"
                                                   FontSize="12"/>

                                        <StackPanel Orientation="Horizontal" 
                                                    Margin="0,5,0,0">
                                            <TextBlock Text="📅" 
                                                       FontSize="10"
                                                       Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding DueDate, StringFormat='dd.MM.yyyy'}" 
                                                       FontSize="12"
                                                       Foreground="DarkBlue"/>

                                            <TextBlock Text=" | " 
                                                       Margin="5,0"/>

                                            <TextBlock Text="{Binding Priority, Converter={StaticResource PriorityToStringConverter}}" 
                                                       FontSize="12"
                                                       Foreground="DarkRed"/>

                                            <TextBlock Text=" | " 
                                                       Margin="5,0"
                                                       Visibility="{Binding Category, Converter={StaticResource NullToVisibilityConverter}}"/>

                                            <Border Background="{Binding Category.Color, Converter={StaticResource StringToBrushConverter}}"
                                                    CornerRadius="3"
                                                    Padding="4,2"
                                                    Visibility="{Binding Category, Converter={StaticResource NullToVisibilityConverter}}">
                                                <TextBlock Text="{Binding Category.Name}"
                                                           FontSize="11"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Действия -->
                                    <StackPanel Grid.Column="2" 
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Command="{Binding EditTaskCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                ToolTip="Редактировать"
                                                Style="{StaticResource IconButtonStyle}">
                                            <TextBlock Text="✏️"/>
                                        </Button>
                                        <Button Command="{Binding DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                ToolTip="Удалить"
                                                Style="{StaticResource IconButtonStyle}"
                                                Margin="5,0,0,0">
                                            <TextBlock Text="🗑️"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Статистика -->
                <Border Grid.Row="1" 
                        Background="#F5F5F5" 
                        BorderBrush="LightGray" 
                        BorderThickness="0,1,0,0"
                        Padding="10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📊 Статистика: " 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalTasks, StringFormat='Всего: {0}'}" 
                                   Margin="10,0"/>
                        <TextBlock Text="{Binding CompletedTasks, StringFormat='Выполнено: {0}'}" 
                                   Margin="10,0" 
                                   Foreground="Green"/>
                        <TextBlock Text="{Binding PendingTasks, StringFormat='Активных: {0}'}" 
                                   Margin="10,0" 
                                   Foreground="Blue"/>
                        <TextBlock Text="{Binding OverdueTasks, StringFormat='Просрочено: {0}'}" 
                                   Margin="10,0" 
                                   Foreground="Red"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"
                           FontStyle="Italic"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar IsIndeterminate="{Binding IsBusy}"
                             Width="100"
                             Height="16"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
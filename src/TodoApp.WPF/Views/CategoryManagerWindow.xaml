<Window
    x:Class="TodoApp.WPF.Views.CategoryManagerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:TodoApp.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="600"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="8" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="8" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Основное содержимое  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <!--  Список категорий  -->
            <Border
                Grid.Column="0"
                Margin="0,0,20,0"
                BorderBrush="LightGray"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Заголовок  -->
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Категории" />

                    <!--  Список  -->
                    <ListView
                        Grid.Row="1"
                        ItemsSource="{Binding Categories}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectedItem="{Binding SelectedCategory}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="10"
                                    BorderBrush="LightGray"
                                    BorderThickness="0,0,0,1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,10,0"
                                            FontSize="16"
                                            Text="{Binding Icon}" />
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="Gray"
                                                Text="{Binding Color}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!--  Форма редактирования  -->
            <Border
                Grid.Column="1"
                Padding="20"
                Background="#F9F9F9"
                BorderBrush="LightGray"
                BorderThickness="1"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="{Binding SelectedCategory, Converter={StaticResource NullToEditCreateConverter}}" />

                    <!--  Название  -->
                    <TextBlock Style="{StaticResource LabelStyle}" Text="Название:" />
                    <TextBox MaxLength="100" Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}" />

                    <!--  Цвет  -->
                    <TextBlock Style="{StaticResource LabelStyle}" Text="Цвет (HEX):" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Column="0"
                            MaxLength="7"
                            Text="{Binding CategoryColor, UpdateSourceTrigger=PropertyChanged}" />

                        <Border
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            Margin="10,0,0,0"
                            BorderBrush="LightGray"
                            BorderThickness="1">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding CategoryColor, Converter={StaticResource StringToBrushConverter}}" />
                            </Border.Background>
                        </Border>
                    </Grid>

                    <!--  Иконка  -->
                    <TextBlock Style="{StaticResource LabelStyle}" Text="Иконка:" />
                    <ComboBox
                        FontSize="16"
                        ItemsSource="{Binding AvailableIcons}"
                        SelectedItem="{Binding CategoryIcon}" />

                    <!--  Кнопки формы  -->
                    <StackPanel
                        Margin="0,20,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            MinWidth="80"
                            Margin="0,0,10,0"
                            Padding="15,8"
                            Command="{Binding CancelEditCommand}"
                            Content="Отмена" />

                        <Button
                            MinWidth="80"
                            Padding="15,8"
                            Background="#007ACC"
                            Command="{Binding SaveCategoryCommand}"
                            Content="Сохранить"
                            Foreground="White">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CategoryName.Length}" Value="0">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Панель кнопок  -->
        <Border
            Grid.Row="1"
            Padding="0,10,0,0"
            BorderBrush="LightGray"
            BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal">
                <Button
                    Padding="15,8"
                    Command="{Binding AddCategoryCommand}"
                    Content="➕ Добавить категорию"
                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />

                <Button
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Command="{Binding EditCategoryCommand}"
                    Content="✏️ Изменить"
                    IsEnabled="{Binding SelectedCategory, Converter={StaticResource NullToBoolConverter}}"
                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />

                <Button
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Command="{Binding DeleteCategoryCommand}"
                    Content="🗑️ Удалить"
                    IsEnabled="{Binding SelectedCategory, Converter={StaticResource NullToBoolConverter}}"
                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />

                <Button
                    Margin="10,0,0,0"
                    Padding="15,8"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseCommand}"
                    Content="Закрыть" />
            </StackPanel>
        </Border>

        <!--  Индикатор загрузки  -->
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Background="#80000000"
            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    Width="100"
                    Height="20"
                    Margin="0,0,0,10"
                    IsIndeterminate="True" />
                <TextBlock
                    FontSize="14"
                    Foreground="White"
                    Text="Сохранение..." />
            </StackPanel>
        </Border>
    </Grid>
</Window>
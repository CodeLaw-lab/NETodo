<Window
    x:Class="TodoApp.WPF.Views.TaskEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:TodoApp.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    Title="{Binding Title}"
    Width="500"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="8" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="8" />
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="8" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Форма редактирования  -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Название задачи  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Название задачи:" />
                <TextBox MaxLength="200" Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Foreground="Red"
                    Text="Название должно содержать минимум 3 символа"
                    Visibility="{Binding TaskTitle.Length, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=3}" />

                <!--  Описание  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Описание:" />
                <TextBox
                    Height="80"
                    AcceptsReturn="True"
                    MaxLength="2000"
                    Text="{Binding Description}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <!--  Срок выполнения  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Срок выполнения:" />
                <DatePicker DisplayDateStart="{x:Static sys:DateTime.Today}" SelectedDate="{Binding DueDate}">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Padding" Value="8" />
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
                <TextBlock
                    Foreground="Red"
                    Text="Дата не может быть в прошлом"
                    Visibility="{Binding IsDateValid, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />

                <!--  Приоритет  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Приоритет:" />
                <ComboBox
                    DisplayMemberPath="{Binding Converter={StaticResource PriorityToStringConverter}}"
                    ItemsSource="{Binding AvailablePriorities}"
                    SelectedItem="{Binding Priority}" />

                <!--  Категория  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Категория:" />
                <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle
                                    Width="12"
                                    Height="12"
                                    Margin="0,0,5,0">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{Binding Color, Converter={StaticResource StringToBrushConverter}}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <!--  Кнопки  -->
        <Border
            Grid.Row="1"
            Padding="0,10,0,0"
            BorderBrush="LightGray"
            BorderThickness="0,1,0,0">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    MinWidth="80"
                    Margin="0,0,10,0"
                    Padding="20,10"
                    Command="{Binding CancelCommand}"
                    Content="Отмена" />

                <Button
                    MinWidth="80"
                    Padding="20,10"
                    Background="#007ACC"
                    Command="{Binding SaveCommand}"
                    Content="Сохранить"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TaskTitle.Length}" Value="0">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!--  Индикатор загрузки  -->
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Background="#80000000"
            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    Width="100"
                    Height="20"
                    Margin="0,0,0,10"
                    IsIndeterminate="True" />
                <TextBlock
                    FontSize="14"
                    Foreground="White"
                    Text="Сохранение..." />
            </StackPanel>
        </Border>
    </Grid>
</Window>
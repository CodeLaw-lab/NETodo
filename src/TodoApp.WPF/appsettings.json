{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=todoapp.db"
  },
  "AppSettings": {
    "AppName": "TodoApp",
    "Version": "1.0.0",
    "MinLogLevel": "Information"
  },
  "Database": {
    "ConnectionString": "Data Source=todoapp.db",
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true
  },
  "Localization": {
    "DefaultCulture": "ru-RU",
    "SupportedCultures": [ "ru-RU", "en-US" ]
  },
  "Theme": {
    "DefaultTheme": "Light",
    "AvailableThemes": [ "Light", "Dark" ]
  },
  "Window": {
    "Width": 1200,
    "Height": 800,
    "IsMaximized": false,
    "RememberPosition": true
  }
}